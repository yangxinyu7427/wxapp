/* pages/sports/sports.wxss */
page,
.spBox {
  height: 100%;
  width: 100%;
  /* background-color: red; */
  position: fixed;
}
.titleBox {
  display: flex;
  flex-direction: row;
  justify-content: center;
  border-bottom: 2px dotted yellowgreen;
}
.titleBox text{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  font-weight: bolder;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;

}
.sort-nav{
  width: 90%;
  height: 200rpx;
  margin: 0rpx auto;
  /* margin-top: 0rpx; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  align-content: center;
  white-space: nowrap;
  /* padding-bottom: 15rpx; */
  /* padding: 20rpx; */
  /* background-color: rgb(250, 250, 250); */

}

::-webkit-scrollbar {
  
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}
.sort-nav-item{
  display: inline-block;
  width: 94rpx;
  font-size: 20rpx;
  text-align: center;
  /* line-height: 4rpx; */
  color: #aaa;
  margin: 0rpx 34rpx 0rpx 20rpx;
}
.sort-nav-icon{
  width: 84rpx;
  height: 84rpx;
}
.sort-nav-text{
  display: block;
}
.down-selected{
  display: block;
  margin: auto;
  margin-top: 5rpx;
  width: 25rpx;
  height: 25rpx;
}
.any {
  background-color: #fafafa !important;
  height: 100rpx !important;
  width: 80% !important;
  font-size: 30rpx !important;
  margin: 0 auto !important;
  /* display: flex !important; */
  border-radius: 20rpx ;
  /* justify-content: center !important; */
  padding: 0 !important;
}
.share {
  line-height: 100rpx !important;
  text-align: left !important;
  margin-left: 50rpx;
  vertical-align: center;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-weight: lighter;
}
.van-cell__left-icon {
  vertical-align: middle !important;
}
.custom-icon {
  margin: auto auto;
  padding: 0;
  margin-right: 20rpx;
  display: block;
  float: right !important;
}
.box {
  height: 500rpx;
  width: 600rpx;
  /* background-color: red; */
  margin: 0 auto;
  margin-top: 30rpx;
  border-radius: 20rpx;
  overflow: scroll;
  /* display: flex;
  justify-content: center;
  flex-direction: row; */
  box-shadow: 0px 3px 1px 0px rgba(0,0,0,0.75);
  position: relative;
}
.all {
  height: 80rpx;
  line-height: 80rpx;
  width: 540rpx;
  margin: 0 auto;
}
.val {
  height: 80rpx;
  line-height: 80rpx;
  font-weight: lighter;
  width: 180rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
  justify-content: center;
  flex-direction: row;
  float: left;
  margin: 0 auto;
}
.rank {
  height: 100rpx;
  width: 100%;
  background-color: #fbfbfb;
  display: block;
  margin: 30rpx 0;
}
.div {
  margin: 30rpx auto;
}
.share2 {
  line-height: 100rpx !important;
  text-align: left !important;
  font-size: large;
  vertical-align: center;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-weight: bolder;
}
.pop {
  height: 500rpx;
  width: 500rpx;
  /* background-color: red !important; */
  border-radius: 20rpx;
}
.timer {
  height: 80rpx !important;
  width: 60% !important;
  display: flex !important;
  justify-content: center !important;
  margin: 0 auto;
  background-color: #fbfbfb !important;
  border-radius: 20rpx;
}
.timeTitle {
  /* padding: 0 !important; */
  font-size: 30rpx !important;
  font-weight: lighter;
  /* padding-bottom: 40rpx; */
  line-height: 40rpx !important;
}