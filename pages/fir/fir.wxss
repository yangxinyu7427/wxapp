/* pages/fir/fir.wxss */
page,
.firPage {
  height: 100%;
  width: 100%;
  background-color: LightSkyBlue;
  margin: 0;
  padding: 0;
  /* overflow: hidden; */
  position: fixed;
}
.begin {
  height: 100%;
  position: relative;
}
.title {
  position: absolute;
  top: 20%;
  left: 50%;
  transform: translate(-50%, 0);
  font-size: 30px;
  font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
  font-weight: bolder;
}
.dq {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  opacity: 0;
}
.hj {
  position: absolute;
  top: 65%;
  left: 25%;
  transform: translate(-50%, -50%);
}
.beginBtn {
  width: 50px;
  position: absolute;
  bottom: 15%;
  left: 50%;
  transform: translate(-50%, 0);
  border: 5px solid rgb(11, 142, 194);
  background-color: #ccc;
}
.iden {
  height: 100%;
  position: relative;
}

.chBox {
  height: 70%;
  width: 80%;
  position: absolute;
  bottom: -20%;
  left: 50%;
  transform: translate(-50%, -50%);
  /* margin: 0;
  padding: 0; */
}

.st {
  height: 50%;
  width: 150px;
  margin: 0;
  padding: 0;
  background-color: transparent;
  text-align: center;
}
.i {
  margin: 0 auto;
}
.ad {
  margin: 0;
  height: 50%;
  width: 150;
  padding: 0;
  background-color: transparent;
  text-align: center;
}

.idenCh {
  font-size: 20px;
  font-family: Arial, Helvetica, sans-serif;
}

